<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Article" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="android:windowContentTransitions">true</item>-->
        <!--        <item name="android:windowSplashScreenBackground">#FFFFFF</item>-->
        <!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/test</item>-->
        <!--        <item name="android:windowSplashScreenAnimationDuration">1000</item>-->

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Article" parent="Base.Theme.Article" />

    <style name="ShapeRadius" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="IconButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:padding">12dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">#84848F</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/Gray400</item>
    </style>

    <style name="IconButtonWebView" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">28dp</item>
        <item name="iconTint">#A0A0AB</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="rippleColor">@color/Gray400</item>
    </style>
</resources>